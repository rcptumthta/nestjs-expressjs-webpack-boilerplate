{
  "name": "nestjs-expressjs-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for NestJS (ExpressJS) webpack",
  "author": {
    "name": "Ratchapol Thongta",
    "email": "rcptum.thta@outlook.com",
    "url": "https://github.com/rcptumthta"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rcptumthta/nestjs-expressjs-webpack-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/rcptumthta/nestjs-expressjs-webpack-boilerplate/issues"
  },
  "scripts": {
    "postinstall": "husky",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "lint": "eslint . --ext .js,.json,.json5,.jsonc,.jsonl,.ts",
    "lint:fix": "eslint . --ext .js,.json,.json5,.jsonc,.jsonl,.ts --fix",
    "build": "cross-env NODE_ENV=local nest build",
    "build:development": "cross-env NODE_ENV=development nest build",
    "build:staging": "cross-env NODE_ENV=staging nest build",
    "build:production": "cross-env NODE_ENV=production nest build",
    "build:ci": "cross-env NODE_ENV=ci nest build",
    "start": "cross-env NODE_ENV=local nest start --watch",
    "start:debug": "cross-env NODE_ENV=local nest start --debug --watch",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:unit-watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit-coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit-ci": "cross-env NODE_ENV=ci jest",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./e2e/jest-e2e.config.ts",
    "test:e2e-ci": "cross-env NODE_ENV=ci jest --config ./e2e/jest-e2e.config.ts"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.22.0",
    "@nestjs/common": "10.4.7",
    "@nestjs/core": "10.4.7",
    "@nestjs/platform-express": "10.4.7",
    "express": "4.21.1",
    "joi": "17.13.3",
    "nest-winston": "1.9.7",
    "reflect-metadata": "0.1.14",
    "rxjs": "7.8.1",
    "string-format": "2.0.0",
    "winston": "3.16.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@commitlint/types": "19.5.0",
    "@nestjs/cli": "10.4.7",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.7",
    "@suites/di.nestjs": "3.0.0",
    "@suites/doubles.jest": "3.0.0",
    "@suites/unit": "3.0.0",
    "@types/dotenv-webpack": "7.0.8",
    "@types/eslint": "8.56.10",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.14",
    "@types/lint-staged": "13.3.0",
    "@types/node": "20.17.1",
    "@types/source-map-support": "0.5.10",
    "@types/string-format": "2.0.3",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "copy-webpack-plugin": "12.0.2",
    "cross-env": "7.0.3",
    "dotenv-webpack": "8.1.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jsonc": "2.17.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "7.1.0",
    "eslint-plugin-sonarjs": "2.0.4",
    "eslint-plugin-unicorn": "56.0.0",
    "eslint-plugin-unused-imports": "3.2.0",
    "eslint-webpack-plugin": "4.2.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jsonc-eslint-parser": "2.4.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "terser-webpack-plugin": "5.3.10",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "webpack": "5.96.1"
  },
  "private": true,
  "engines": {
    "node": "^20"
  }
}
